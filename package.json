{
  "name": "color-formula-desktop-app",
  "version": "1.1.0",
  "description": "Desktop app for color formula management with SQLite",
  "main": "main.js",
  "author": "Teejakkrit",
  "license": "ISC",
  "scripts": {
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "build": "rimraf dist && electron-builder",
    "build:win": "rimraf dist && electron-builder --win --x64",
    "build:mac": "rimraf dist && electron-builder --mac --x64 --arm64"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "better-sqlite3": "^11.1.2",
    "dotenv": "^16.3.1",
    "exceljs": "^4.3.0",
    "read-excel-file": "^5.5.3"
  },
  "devDependencies": {
    "electron": "^31.2.1",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2",
    "rimraf": "^3.0.2"
  },
  "build": {
    "appId": "com.teejakkrit.colorformulaapp.sqlite",
    "productName": "Color Formula App",
    "files": [
      "main.js",
      "preload.js",
      "index.html"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
